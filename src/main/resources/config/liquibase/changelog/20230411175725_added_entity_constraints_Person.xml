<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Person.
    -->
    <changeSet id="20230411175725-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="nationality_id"
                                 baseTableName="person"
                                 constraintName="fk_person__nationality_id"
                                 referencedColumnNames="id"
                                 referencedTableName="country"/>

        <addForeignKeyConstraint baseColumnNames="birthplace_id"
                                 baseTableName="person"
                                 constraintName="fk_person__birthplace_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>
    </changeSet>
</databaseChangeLog>
