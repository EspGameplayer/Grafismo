<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Competition.
    -->
    <changeSet id="20230828205828-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="competition"
                                 constraintName="fk_competition__parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="competition"/>

        <addForeignKeyConstraint baseColumnNames="country_id"
                                 baseTableName="competition"
                                 constraintName="fk_competition__country_id"
                                 referencedColumnNames="id"
                                 referencedTableName="country"/>

        <addForeignKeyConstraint baseColumnNames="competition_id"
                                 baseTableName="rel_competition__team"
                                 constraintName="fk_rel_competition__team__competition_id"
                                 referencedColumnNames="id"
                                 referencedTableName="competition"/>

        <addForeignKeyConstraint baseColumnNames="team_id"
                                 baseTableName="rel_competition__team"
                                 constraintName="fk_rel_competition__team__team_id"
                                 referencedColumnNames="id"
                                 referencedTableName="team"/>

        <addForeignKeyConstraint baseColumnNames="competition_id"
                                 baseTableName="rel_competition__referee"
                                 constraintName="fk_rel_competition__referee__competition_id"
                                 referencedColumnNames="id"
                                 referencedTableName="competition"/>

        <addForeignKeyConstraint baseColumnNames="referee_id"
                                 baseTableName="rel_competition__referee"
                                 constraintName="fk_rel_competition__referee__referee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="referee"/>
    </changeSet>
</databaseChangeLog>
