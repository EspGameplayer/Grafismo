<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Suspension.
    -->
    <changeSet id="20230411175746-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="suspension"
                                 constraintName="fk_suspension__person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="person"/>

        <addForeignKeyConstraint baseColumnNames="competition_id"
                                 baseTableName="suspension"
                                 constraintName="fk_suspension__competition_id"
                                 referencedColumnNames="id"
                                 referencedTableName="competition"/>

        <addForeignKeyConstraint baseColumnNames="match_id"
                                 baseTableName="suspension"
                                 constraintName="fk_suspension__match_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_match"/>
    </changeSet>
</databaseChangeLog>
